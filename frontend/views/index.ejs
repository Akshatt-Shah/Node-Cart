<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h1>Product List</h1>
        <table class="table" id="table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Product Price</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <!-- Products will be dynamically added here -->
            </tbody>
        </table>
    </div>

        <script>
            // Fetch data from the API endpoint
            fetch('http://localhost:3000/getproduct')
                .then(response => response.json())
                .then(products => {
                    const productList = document.querySelector('tbody');

                    // Loop through the products and create table rows
                    products.forEach(product => {
                        // const row = document.createElement('tr');

                        // // Create table cells for product name and price
                        // const nameCell = document.createElement('td');
                        // nameCell.textContent = product.pname;

                        // const priceCell = document.createElement('td');
                        // priceCell.textContent = product.price;

                        // // Append cells to the row
                        // row.appendChild(nameCell);
                        // row.appendChild(priceCell);
                        const row = `<tr>
                        <td>${product.pname}</td>
                        <td>${product.price}</td>
                        <td><button type="button" class="btn btn-warning">Update</td>
                        <td><button type="button" class="btn btn-danger">Delete</td>
                        </tr>`;

                        // Append row to the table body
                        productList.insertAdjacentHTML("afterend", row);
                    });
                })
                .catch(error => {
                    console.error('Error fetching products:', error);
                    // Handle errors
                });
        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>